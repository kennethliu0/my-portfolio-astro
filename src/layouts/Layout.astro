---
import '../styles/global.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
		<meta name="author" content="Kenneth Liu" />
		<meta name="description" content="Explore the portfolio of Kenneth Liu, a creative full-stack developer building modern web applications with React, Next.js, and TypeScript. Discover my projects and skills." />
		<meta name="robots" content="index, follow" />
		<meta name="google" content="notranslate" />

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://kennethliu0.github.io/portfolio/" />
		<meta property="og:title" content="Kenneth Liu - Full Stack Developer" />
		<meta property="og:description" content="Explore the portfolio of Kenneth Liu, a creative full-stack developer building modern web applications with React, Next.js, and TypeScript. Discover my projects and skills." />

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content="https://kennethliu0.github.io/portfolio/" />
		<meta property="twitter:title" content="Kenneth Liu - Full Stack Developer" />
		<meta property="twitter:description" content="Explore the portfolio of Kenneth Liu, a creative full-stack developer building modern web applications with React, Next.js, and TypeScript. Discover my projects and skills." />
	</head>
	<body>
		<slot />
	</body>
</html>